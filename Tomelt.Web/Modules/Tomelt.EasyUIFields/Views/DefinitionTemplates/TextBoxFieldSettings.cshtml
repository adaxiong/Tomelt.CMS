    <div class="editor-field">
        <label for="@Html.FieldIdFor(m => m.LabelPosition)">@T("标题位置")</label>
        @Html.TextBoxFor(m => m.LabelPosition, new { @class = "text" })
        @Html.ValidationMessageFor(m => m.LabelPosition)
        <span class="hint">@T("标题位置")</span>
    </div>
</fieldset>
<fieldset>
    <div>
        <label for="@Html.FieldIdFor(m => m.DefaultValue)">@T("默认值")</label>
        @Html.TextBoxFor(m => m.DefaultValue, new { @class = "text" })
        <span class="hint">@T("字段默认值")</span>
        @Html.ValidationMessageFor(m => m.DefaultValue)
    </div>
</fieldset>
