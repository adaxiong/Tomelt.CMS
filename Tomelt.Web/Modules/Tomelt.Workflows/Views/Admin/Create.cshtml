@model Tomelt.Workflows.ViewModels.AdminEditViewModel
@using Tomelt.Workflows.Models;
@using Tomelt.Workflows.ViewModels;

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()

    <fieldset>
        <div>
            <label for="name">@T("Name")</label>
            @Html.TextBox("name", String.Empty, new { @class= "text medium" })
            <span class="hint">@T("The name of the Workflow")</span>
        </div>
    </fieldset>
    
    <fieldset>
        <button class="primaryAction" type="submit">@T("Save")</button>
    </fieldset>
}