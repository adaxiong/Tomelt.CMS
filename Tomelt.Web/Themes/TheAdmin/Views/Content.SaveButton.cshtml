@using Tomelt.ContentManagement
@using Tomelt.Core.Contents
@using Tomelt.Utility.Extensions
<div class="col-xs-12 text-center">
    
    <div class="form-group">
        <button class="easyui-linkbutton c6" type="submit" name="submit.Save" value="submit.Save" data-options="iconCls:'icon-save'">@T("保存提交")</button>
        @if (Authorizer.Authorize(Permissions.PublishContent, (IContent)Model.ContentItem)) {

            <button class="easyui-linkbutton c1" type="submit" name="submit.Publish" value="submit.Publish" data-options="iconCls:'icon-ok'">@T("立刻发布")</button>
        }
        <button class="easyui-linkbutton c5" type="button" data-options="iconCls:'icon-cancel'" onclick="window.parent.window.closeWin();">@T("关闭返回")</button>
    </div>
</div>


