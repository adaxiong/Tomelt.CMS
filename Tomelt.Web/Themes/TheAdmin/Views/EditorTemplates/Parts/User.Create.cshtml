@model Tomelt.Users.ViewModels.UserCreateViewModel



    <div class="col-xs-12">
        <div class="form-group">
            @Html.EasyUIFor(m => m.UserName, "easyui-textbox", new
            {
                label = T("用户名称"),
                required = true,
                width = "100%"
            })
            @Html.ValidationMessageFor(m => m.UserName, "*")
        </div>
    </div>

    <div class="col-xs-12">
        <div class="form-group">
            @Html.EasyUIFor(m => m.Email, "easyui-textbox", new
            {
                label = T("电子邮箱"),
                required = true,
                width = "100%"
            })
        </div>
    </div>

    <div class="col-xs-12">
        <div class="form-group">
            @Html.EasyUIFor(m => m.Password, "easyui-passwordbox", new
            {
                label = T("登陆密码"),
                required = true,
                width = "100%"
            })
        </div>
    </div>

    <div class="col-xs-12">
        <div class="form-group">
            @Html.EasyUIFor(m => m.ConfirmPassword, "easyui-passwordbox", new
            {
                label = T("确认密码"),
                required = true,
                width = "100%"
            })
        </div>
    </div>




@using (Script.Foot())
{

    <script type="text/javascript">
        $(function() {
            $('form').form({
                url:"@Url.Action("CreateAJAX","Admin",new{area= "Tomelt.Users" })",
                onSubmit: function(){
                    var isValid = $(this).form('validate');
                    $.messager.progress();	// 显示进度条
                    if (!isValid) {
                        $.messager.progress('close');	// 如果表单是无效的则隐藏进度条
                    }
                    return isValid;	// 返回false终止表单提交
                },
                success:function(data){
                    var result = JSON.parse(data);
                    if (result.State == 1) {
                        //刷新表单
                        window.parent.window.reloadData();
                        if ($.messager) {
                            $.messager.defaults.ok = "继续";
                            $.messager.defaults.cancel = "返回";
                            $.messager.confirm("操作提示", result.Msg, function (r) {
                                if (!r) {
                                    //关闭窗口
                                    window.parent.window.closeWin();
                                }
                            });
                        }
                    } else {
                        $.messager.alert('错误', result.Msg, 'error');
                    }
                    $.messager.progress('close');	// 如果提交成功则隐藏进度条
                }
            });
            //$('form').submit();
        });
        
    </script>
}